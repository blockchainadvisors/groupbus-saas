# ===========================================
# GroupBus SaaS Platform - Environment Config
# ===========================================

# Database (PostgreSQL - Docker)
DATABASE_URL=postgresql://groupbus:groupbus_dev@localhost:5432/groupbus

# Redis (Docker)
REDIS_URL=redis://localhost:6379

# Auth (Auth.js v5)
AUTH_SECRET=change-me-to-a-random-secret-at-least-32-chars
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# OpenAI (AI/LLM Automation)
OPENAI_API_KEY=sk-...
LLM_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-5-mini

# Mailjet SMTP
SMTP_HOST=in-v3.mailjet.com
SMTP_PORT=587
SMTP_USER=your-mailjet-api-key
SMTP_PASS=your-mailjet-secret-key
SMTP_FROM=noreply@groupbus.co.uk
SMTP_FROM_NAME=GroupBus

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Inbound Email Webhook
INBOUND_EMAIL_WEBHOOK_SECRET=change-me-to-a-random-secret

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=GroupBus
NODE_ENV=development

# AI Cost Controls (defaults, also configurable via admin UI)
AI_DAILY_BUDGET_USD=50
AI_ALERT_THRESHOLD_PERCENT=80
